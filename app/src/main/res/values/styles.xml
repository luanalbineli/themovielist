<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/windowBackground</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="android:textColorTertiary">@color/white</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Widget.AppBar" parent="@style/Widget.Design.AppBarLayout">
        <item name="popupTheme">@style/AppTheme.PopupTheme</item>
        <item name="android:elevation">8dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="AppTheme.PopupTheme" parent="ThemeOverlay.MaterialComponents.Light" />

    <style name="TextAppearance.TheMovieList.ToolbarTitle" parent="@style/TextAppearance.MaterialComponents.Caption">
        <item name="android:fontFamily">@font/google_sans</item>
    </style>

    <style name="LightMediumText" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="LightSmallText" parent="Base.TextAppearance.AppCompat.Small">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="ThinSmallText" parent="Base.TextAppearance.AppCompat.Small">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="LightMediumTextBold" parent="LightMediumText">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="HomeListTitle" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BlackLargeText" parent="Base.TextAppearance.AppCompat.Headline">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="Widget.TheMovieList.BottomNavigationView" parent="@style/Widget.MaterialComponents.BottomNavigationView">
        <item name="android:background">?android:attr/windowBackground</item>
        <item name="labelVisibilityMode">selected</item>
        <item name="itemTextAppearanceActive">@style/TextAppearance.TheMovieList.BottomNavigationView.Active</item>
    </style>

    <style name="TextAppearance.TheMovieList.BottomNavigationView.Active" parent="@style/TextAppearance.MaterialComponents.Caption">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
    </style>
</resources>

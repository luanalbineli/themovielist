<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/windowBackground</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Widget.AppBar" parent="@style/Widget.Design.AppBarLayout">
        <item name="popupTheme">@style/AppTheme.PopupTheme</item>
        <item name="android:elevation">8dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="AppTheme.PopupTheme" parent="ThemeOverlay.MaterialComponents.Light" />

    <style name="TextAppearance.TheMovieList.ToolbarTitle" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:fontFamily">@font/google_sans</item>
    </style>

    <style name="LightMediumText" parent="Base.TextAppearance.AppCompat.Medium">
        <item name="android:fontFamily">@font/google_sans</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="LightSmallText" parent="Base.TextAppearance.AppCompat.Small">
        <item name="android:fontFamily">@font/google_sans</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="ThinSmallText" parent="Base.TextAppearance.AppCompat.Small">
        <item name="android:fontFamily">@font/google_sans</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="LightMediumTextBold" parent="LightMediumText">
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/google_sans</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="BlackLargeText" parent="Base.TextAppearance.AppCompat.Headline">
        <item name="android:fontFamily">@font/google_sans</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="Widget.TheMovieList.BottomNavigation" parent="@style/Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="itemIconTint">@color/colorAccent</item>
        <!--<item name="itemTextAppearanceActive">@style/TextAppearance.IOSched.BottomNavigationView.Active</item>
        <item name="itemTextAppearanceInactive">@style/TextAppearance.IOSched.BottomNavigationView</item>-->
        <item name="labelVisibilityMode">selected</item>
        <item name="android:theme">@style/ThemeOverlay.MaterialComponents.Dark</item>
    </style>

    <style name="TextAppearance.IOSched.BottomNavigationView" parent="@style/Widget.MaterialComponents.BottomNavigationView">
        <item name="android:fontFamily">@font/google_sans</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="TextAppearance.IOSched.BottomNavigationView.Active">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
    </style>
</resources>

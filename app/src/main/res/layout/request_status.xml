<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/default_vertical_margin">

    <ProgressBar
        android:id="@+id/view_request_status_loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center" />

    <LinearLayout
        android:id="@+id/view_request_status_error"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_request_status_error"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:fontFamily="sans-serif-medium"
            android:textAlignment="center"
            android:textSize="@dimen/text_size_subhead"
            tools:text="Ocorreu um erro ao carregar as informações. Por favor, tente novamente" />

        <Button
            android:id="@+id/button_request_status_try_again"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/default_vertical_margin"
            android:text="@string/text_try_again"
            android:textAllCaps="true" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/view_request_status_empty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:fontFamily="sans-serif-thin"
            android:text="@string/text_request_status_empty_list"
            android:textAllCaps="true"
            android:textSize="@dimen/text_size_display_1_material"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_request_status_empty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-thin"
            android:textAlignment="center"
            android:textSize="@dimen/text_size_title_material"
            tools:text="Nenhum estabelecimento encontrado" />
    </LinearLayout>
</FrameLayout>